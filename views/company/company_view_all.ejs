<!DOCTYPE html>
<html>
<head>
    <title>Company - View All</title>
</head>
<body>
<h1>Companies</h1>
<a href="/company/add">Add New Company</a>
<table border = "1">
    <tr>
        <th>ID</th>
        <th>Name</th>
        <th>Actions</th>
    </tr>
    <% for(var i = 0; i < companies.length; i++) { %>
    <tr>
        <td>
            <a href="/company/?company_id=<%= companies[i].company_id %>">
                <%= companies[i].company_id %>
            </a>
        </td>


        <td>
            <a href="/company/?company_id=<%= companies[i].company_id %>">
                <%= companies[i].company_name %>
            </a>
        </td>
        <td>
            <a href='/company/edit/?company_id=<%= companies[i].company_id
            %>'>
                Edit
            </a>
            <a href='/company/delete/?company_id=<%= companies[i].company_id
            %>'>
                Delete
            </a>
        </td>
    </tr>
    <% } %>
    </table>

    <% if(locals.was_successful_delete) { %>
    <div>
    <p>You Successfully Deleted A Company!</p>
    </div>
    <% } %>
    </body>
    </html>

