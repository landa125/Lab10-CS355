<!DOCTYPE html>
<html>
<head>
    <title>Account - View All</title>
</head>
<body>
<h1>Accounts</h1>
<a href="/account/add">Add New Account</a>

<table border = "1">
    <tr>
        <th>ID</th>
        <th>Email</th>
        <th>First Name</th>
        <th>Last Name</th>
        <th>Actions</th>
    </tr>
    <% for(var i = 0; i < accounts.length; i++) { %>
    <tr>
        <td>
            <a href="/accounts/?account_id=<%= accounts[i].account_id %>">
                <%= accounts[i].account_id %>
            </a>
        </td>

        <td>
            <a href="/accounts/?account_id=<%= accounts[i].account_id %>">
                <%= accounts[i].email %>
            </a>
        </td>

        <td>
            <a href="/accounts/?account_id=<%= accounts[i].account_id %>">
                <%= accounts[i].first_name %>
            </a>
        </td>

        <td>
            <a href="/accounts/?account_id=<%= accounts[i].account_id %>">
                <%= accounts[i].last_name %>
            </a>
        </td>

        <td>
            <a href='/account/edit/?account_id=<%= accounts[i].account_id %>'>
                Edit
            </a>

            <a href='/account/delete/?account_id=<%= accounts[i].account_id
            %>'>
                Delete
            </a>
        </td>
    </tr>
    <% } %>
    </table>
    <% if(locals.was_successful_delete) { %>
    <div>
    <p>You Successfully Deleted An Account!</p>
    </div>
    <% } %>
    </body>
    </html>


